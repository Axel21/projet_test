<div class="container-fluid" id='venteProd'>
<div class="row-fluid">
<div class="col-md-12">
    <h1>
        {% if langue == 'fr'%}
            Créations à vendre :
        {% else %}
            Products for sale :
        {% endif %} 
    </h1>
    <div class="carousel slide" id="myCarousel">
        <div class="carousel-inner">
            <div class="item active">
                    <ul class="thumbnails">
                        {% for produit in produits %}
                        <li class="col-md-4" id='product'>
                                {% if langue == 'fr'%}
                                  <p class="col-md-9">{{produit.nom}} - {{produit.prix}}€</p>
                                  <a href="{{ path('vae_boutique_detail',{'nomSite' : site.nom, 'slugRubrique' : rubrique.slug, 'slugProduit' : produit.slug } )}}"><img src="{{ asset('uploads/images/'~produit.image) }}" width='200px' height='120'><a>
                                 {% else %}
                                  <p class="col-md-9">{{produit.nomEn}} - {{produit.prix}}€</p>
                                  <a href="{{ path('vae_boutique_detail',{'nomSite' : site.nom, 'slugRubrique' : rubrique.slugEn, 'slugProduit' : produit.slugEn } )}}"><img src="{{ asset('uploads/images/'~produit.image) }}" width='200px' height='120'></a>
                                 {% endif %}    
                        </li>
                        {% endfor %}
                    </ul>
              </div><!-- /Slide1 --> 
            
            
             
        </div>
        
       {# <div class="control-box">                            
            <a data-slide="prev" href="#myCarousel" class="carousel-control left">‹</a>
            <a data-slide="next" href="#myCarousel" class="carousel-control right">›</a>
        </div><!-- /.control-box -->   #}
                              
    </div><!-- /#myCarousel -->
        
</div><!-- /.span12 -->          
</div><!-- /.row --> 
</div><!-- /.container -->

