<table class="tablesorter">
    <thead>
        <tr>
            <th>transaction</th>
            <th>adresse</th>
            <th>produit</th>
            <th>date</th>
            <th>client</th>
            <th>mail</th>
            <th>action</th>
        </tr>
    </thead>

    <tbody>
    {% for entity in entities %}
    	<tr>
    		<td>{{ entity.transaction}}</td>
            <td>
            {% for item in entity.adresse %}
                {{ item}}
            {% endfor %}
            </td>
            <td>{{ entity.produit|length > 15 ? entity.produit[:15] ~ '...' : entity.produit }}</td>
            <td>{{ entity.date|length > 15 ? entity.date[:15] ~ '...' : entity.date }}</td>
            <td>{{ entity.client }}</td>
            <td>{{ entity.email }}</td>
            <td>
                <ul>
                    <li><a class="btn btn-small" href="{{ path('admin_achats_delete', { 'id': entity.id }) }}">suppr</a></li>
                </ul>
            </td>
    	</tr>
    {% endfor %}
    </tbody>
    </table>

    <div id="table_info">
        <ul id="pagination">
        {% for list_page in range(page - 4, page + 4) %}
        {% if list_page > 0 and list_page <= count_page %}
        	{% if list_page == page %}
				<li class="active">{{ page }}</li>
        	{% else %}
        	<li><a href="{{ path('admin_achats_index', {'page': list_page}) }}">{{ list_page }}</a></li>
        	{% endif %}
        		
        {% endif %}
        {% endfor %}
        </ul>
	</div>
