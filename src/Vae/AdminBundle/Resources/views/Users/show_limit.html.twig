<table class="tablesorter">
    <thead>
        <tr>
            <th>nom </th>
            <th>email</th>
            <th>password</th>
            <th>action</th>
        </tr>
    </thead>

    <tbody>
    {% for entity in entities %}
    	<tr>
    		<td>{{ entity.username|length > 15 ? entity.username[:15] ~ '...' : entity.username }}</td>
            <td>{{ entity.email|length > 15 ? entity.email[:15] ~ '...' : entity.email }}</td>
            <td>{{ entity.password|length > 15 ? entity.password[:15] ~ '...' : entity.password }}</td>

            <td>
                <ul>
                    <li><a class="btn btn-small" href="{{ path('admin_users_index_update', { 'id':entity.id, 'page': page}) }}">editer</a></li>
                    <li><a class="btn btn-small" href="{{ path('admin_users_delete', { 'id': entity.id }) }}">suppr</a></li>

                </ul>
            </td>
    	</tr>
    {% endfor %}
    </tbody>
    </table>

    <div id="table_info">
        <ul id="pagination">
        {% for list_page in range(page - 4, page + 4) %}
        {% if list_page > 0 and list_page <= count_page %}
        	{% if list_page == page %}
				<li class="active">{{ page }}</li>
        	{% else %}
        	<li><a href="{{ path('admin_rubriques_index', {'page': list_page}) }}">{{ list_page }}</a></li>
        	{% endif %}
        		
        {% endif %}
        {% endfor %}
        </ul>
        <div class="wrap_button">
            <a href="{{ path('admin_users_index_add', {'page': page}) }}" class="btn btn_small">Ajouter</a>
        </div>
	</div>
