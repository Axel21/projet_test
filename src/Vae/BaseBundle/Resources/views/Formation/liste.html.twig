{% for formation in formations %}
<article>
                                            
    <div>
        {% if langue == 'fr'%}
            <h2><a href="{{ path('vae_base_formation_detail',{'nomSite' : site.nom, 'slugRubrique' : rubrique.slug, 'slugFormation' : formation.slug } )}}">{{formation.nom}}</a></h2>
            <p>{{formation.description|raw}}</p>
            <p>{{formation.debut|date('d-m-Y') }}</p>
            <p>{{formation.fin|date('d-m-Y') }}</p>
        {% else %}
            <h2><a href="{{ path('vae_base_formation_detail',{'nomSite' : site.nom, 'slugRubrique' : rubrique.slugEn, 'slugFormation' : formation.slugEn } )}}">{{formation.nomEn}}</a></h2>
            <p>{{formation.descriptionEn}}</p>
            <p>{{formation.debut|date('m-d-Y') }}</p>
            <p>{{formation.fin|date('m-d-Y') }}</p>
        {% endif %}
    </div>
        
</article>
{% endfor %}

