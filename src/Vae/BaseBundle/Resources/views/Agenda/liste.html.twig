
    <nav>
      <h2><a href="{{ path('vae_base_agenda_agenda',{'nomSite' : site.nom} )}}">Agenda</a></h2>
      <ul>
        {% for agenda in agendas %}
            {% if langue == 'fr'%}
                <li><a href="{{ path('vae_base_agenda_detail',{'nomSite' : site.nom, 'slugAgenda' : agenda.slug } )}}">{{agenda.date|date('d/m/y')}}<br/>{{agenda.titre}}</a></li>
            {% else %}
                <li><a href="{{ path('vae_base_agenda_detail',{'nomSite' : site.nom, 'slugAgenda' : agenda.slugEn } )}}">{{agenda.date|date('m/d/y')}}<br/>{{agenda.titreEn}}</a></li>       
            {% endif %}
        {% endfor %}
      </ul>
    </nav>


